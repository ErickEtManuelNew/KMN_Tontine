{
  "ConnectionStrings": {
    "DefaultConnection": "${ConnectionStrings__DefaultConnection}" // ex: /data/app.db ou PostgreSQL
  },
  "Jwt": {
    "Key": "${Jwt__Key}",
    "Issuer": "${Jwt__Issuer}",
    "Audience": "${Jwt__Audience}",
    "DurationInMinutes": 60
  },
  "DefaultSuperAdmin": {
    "Email": "${DefaultSuperAdmin__Email}",
    "Password": "${DefaultSuperAdmin__Password}",
    "FullName": "${DefaultSuperAdmin__FullName}",
    "FirstName": "${DefaultSuperAdmin__FirstName}",
    "LastName": "${DefaultSuperAdmin__LastName}"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error"
    }
  },
  "Email": {
    "Host": "${Email__Host}",
    "Port": "${Email__Port}",
    "User": "${Email__User}",
    "Password": "${Email__Password}",
    "FromEmail": "${Email__FromEmail}",
    "FromName": "${Email__FromName}",
  },
  "EmailChecker": {
    "Host": "${EmailChecker__Host}",
    "Port": 993,
    "UseSsl": true,
    "Username": "${EmailChecker__Username}",
    "Password": "${EmailChecker__Password}",
    "EmailFolder": "${EmailChecker__EmailFolder}",
    "CheckIntervalMinutes": 15
  },
  "ApiSettings": {
    "BaseUrl": "http://0.0.0.0:",
    "ConfirmationUrl": "https://kmn-tontine-ui.onrender.com:"
  }
}